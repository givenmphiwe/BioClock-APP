<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:padding="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo / Header -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="App Logo"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- "Login to your account" label -->
        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Industry Number input -->
        <EditText
            android:id="@+id/et_industry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Industry Number"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:inputType="text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Password input with eye drawable -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_industry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Log In button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="LOG IN"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:background="@drawable/btn_login_bg"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:stateListAnimator="@null"
            android:elevation="4dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_fingerprint"
            app:layout_constraintWidth_percent="0.5"/>

        <!-- Fingerprint capture button -->
        <Button
            android:id="@+id/btn_fingerprint"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="TAP TO CAPTURE FINGER"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/btn_fingerprint_bg"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="@id/btn_login"
            app:layout_constraintBottom_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toEndOf="@id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"/>

        <Button
            android:id="@+id/btn_compare"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="COMPARE"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:background="@drawable/btn_fingerprint_bg"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_fingerprint"
            app:layout_constraintStart_toStartOf="@id/btn_fingerprint"
            app:layout_constraintEnd_toEndOf="@id/btn_fingerprint"/>


        <!-- Info / status text -->
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

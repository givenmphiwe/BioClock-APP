<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow layer (offset and semi-transparent) -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- main rounded input -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
            <corners android:radius="24dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

</layer-list>
